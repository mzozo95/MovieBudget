<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/search">

    <fragment
        android:id="@+id/search"
        android:name="com.majlathtech.moviebudget.ui.movielist.MovieListFragment"
        android:label="fragment_movie_list_screen"
        tools:layout="@layout/fragment_movie_list">
        <action
            android:id="@+id/action_to_favorites"
            app:destination="@id/favorites"
            app:launchSingleTop="true"
            app:popUpTo="@+id/navigation"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/favorites"
        android:name="com.majlathtech.moviebudget.ui.favorite.FavoriteFragment"
        android:label="fragment_favorite_list_screen"
        tools:layout="@layout/fragment_movie_list">
        <action
            android:id="@+id/action_to_search"
            app:destination="@id/search"
            app:launchSingleTop="true"
            app:popUpTo="@+id/navigation"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>